@model treatwell.ViewModels.UserVenuesViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>User Venues</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserVenues.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.UserVenues.User.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.UserVenues.UserId, new SelectList(Model.User, "Id", "FullName"), "Select Employee", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserVenues.UserId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserVenues.Venues.VenueName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.UserVenues.VenuesId, new SelectList(Model.Venues, "Id", "VenueName"), "Select Venue", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserVenues.VenuesId, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
