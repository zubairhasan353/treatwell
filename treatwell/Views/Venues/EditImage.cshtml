@model treatwell.Models.VenueImages

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Image</h2>


@using (Html.BeginForm("EditImage", "Venues", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Venue Image</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="file" name="ImagePath" id="ImagePath" />
                @Html.ValidationMessageFor(model => model.ImagePath)
                <br />
                <img src="@Url.Content(Model.ImagePath)" width="100px" height="100px" alt="Image" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "CreateImages/"+ Model.VenuesId)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
