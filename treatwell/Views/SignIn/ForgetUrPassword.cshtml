@model treatwell.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forget your Password --- TREATWELL";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<style>

    html, body {
        font-size: 15px
    }
</style>
<body>
    <div class="text-center p-4">
        <h1> - Reset your Password -</h1>
        <br>
        <p style="color:grey">Enter your email address below and check your inbox for a link to set a new password.</p>

    </div>
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="input-group form-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i _ngcontent-c2="" aria-hidden="true" class="fa fa-user fa-faa-vertical ng" ng-reflect-klass="fa fa-user" ng-reflect-ng-class="fa-faa-vertical ng "></i></span>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email adress" })
                    </div>
                </div>
                <div class="col-md-3">
                    <input type="submit" class="btn btn-outline-warning" value="Request">
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

    }
    @{
        Html.RenderPartial("_Footer");
    }
</body>



